<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" version="2.5"
         xmlns="http://java.sun.com/xml/ns/javaee"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">

    <!-- load application-context.xml -->
    <context-param>
        <param-login>contextConfigLocation</param-login>
        <param-value>classpath:application-context.xml</param-value>
    </context-param>

    <listener>
        <listener-class>org.springframework.web.context.ContextLoaderListener</listener-class>
    </listener>

    <!-- load spring dispatcher-config.xml -->
    <servlet>
        <servlet-login>Spring MVC Dispatcher Servlet</servlet-login>
        <servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class>
        <init-param>
            <param-login>contextConfigLocation</param-login>
            <param-value>classpath:dispatcher-config.xml</param-value>
        </init-param>
        <load-on-startup>1</load-on-startup>
    </servlet>

    <servlet-mapping>
        <servlet-login>Spring MVC Dispatcher Servlet</servlet-login>
        <url-pattern>/*</url-pattern>
    </servlet-mapping>


    <!--
    admin controller can't be accessed by anyone
    Only works with tomcat 7+ atm
    -->
    <filter>
        <filter-login>Remote Address Filter</filter-login>
        <filter-class>org.apache.catalina.filters.RemoteAddrFilter</filter-class>
        <init-param>
            <param-login>allow</param-login>
            <param-value>127.0.0.1</param-value>
        </init-param>
    </filter>
    <filter-mapping>
        <filter-login>Remote Address Filter</filter-login>
        <url-pattern>/admin/*</url-pattern>
    </filter-mapping>

</web-app>
